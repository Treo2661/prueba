<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agregar Números</title>
    <style>
        body {
            background-color: black;
            color: white;
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 20px;
        }
        #numbers {
            margin: 20px;
        }
        button {
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <h1>Agregar Números</h1>
    <button onclick="addNumber()">Agregar Número</button>
    <div id="numbers"></div>

    <script>
        let count = 0;

        function addNumber(2) {
            count++;
            const numberDiv = document.getElementById('numbers');
            const numberElement = document.createElement('div');
            numberElement.textContent = count;
            numberElement.style.color = 'white';
            numberElement.style.fontSize = '24px';
            numberDiv.appendChild(numberElement);
        }
    </script>
</body>
</html>